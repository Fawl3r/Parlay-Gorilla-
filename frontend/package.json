{
  "name": "f3-parlay-ai-frontend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "clean:next": "node -e \"const fs=require('fs'); fs.rmSync('.next',{recursive:true,force:true}); fs.rmSync('.turbo',{recursive:true,force:true});\"",
    "predev": "npm run clean:next",
    "predev:network": "npm run clean:next",
    "dev": "next dev --webpack -p 3000",
    "dev:network": "next dev --webpack -H 0.0.0.0 -p 3000",
    "dev:turbopack": "next dev --turbopack -p 3000",
    "dev:network:turbopack": "next dev --turbopack -H 0.0.0.0 -p 3000",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "test:server-bundle": "node scripts/verify-next-server-bundle.js",
    "test:smoke:build": "npm run clean:next && npm run build && npm run test:server-bundle",
    "test": "npm run test:unit",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:mobile-prod": "playwright test --config=playwright.mobile-prod.config.ts",
    "test:mobile": "playwright test -c playwright.mobile.config.ts",
    "test:mobile:headed": "playwright test -c playwright.mobile.config.ts --headed",
    "test:mobile:ui": "playwright test -c playwright.mobile.config.ts --ui",
    "test:mobile:report": "playwright show-report playwright-report",
    "check-voice": "tsx scripts/check-voice.ts"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "axios": "^1.6.5",
    "canvas-confetti": "^1.9.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.562.0",
    "next": "^16.1.1",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "recharts": "^3.5.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@playwright/test": "^1.58.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^25.2.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "autoprefixer": "^10.4.24",
    "dotenv": "^17.2.3",
    "eslint": "^9.0.0",
    "eslint-config-next": "^16.1.6",
    "pino-pretty": "^13.1.3",
    "postcss": "^8.4.33",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  },
  "overrides": {
    "esbuild": "^0.25.0"
  }
}
