# Public site URL (used for sitemap absolute URLs)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Backend API URL (used by client-side calls)
NEXT_PUBLIC_API_URL=http://localhost:8000

# Optional: backend URL for server-side fetches (SSR) and for Next.js rewrites proxying /api/*.
# - Local dev: use full URL (e.g. http://localhost:8000)
# - Render Blueprint: set this fromService (backend) using property=hostport (e.g. parlay-gorilla-backend:10000)
#   The frontend automatically prefixes http:// if you omit a protocol.
PG_BACKEND_URL=http://localhost:8000

# Mobile E2E test account (optional). When set, npm run test:mobile logs in and runs full flows.
# Create the account once: npm run test:mobile:create-user (uses PG_BACKEND_URL or prod URL).
# For prod tests, PG_MOBILE_BACKEND_URL is auto-set to the prod frontend URL if unset.
# PG_MOBILE_TEST_EMAIL=
# PG_MOBILE_TEST_PASSWORD=

# ============================================
# ADVERTISING CONFIGURATION
# ============================================

# Google AdSense Client ID (e.g., ca-pub-1234567890)
# Get from Google AdSense: https://www.google.com/adsense/
# Leave empty to disable ads in development
NEXT_PUBLIC_ADSENSE_CLIENT_ID=

# ============================================
# SPORTSBOOK AFFILIATE ADS (CPA / RevShare)
# ============================================
#
# Enable sportsbook affiliate creatives in the existing ad slots (recommended for US traffic).
# When enabled, the app will:
# - Detect the user's US state (via /api/geo headers, and optionally ipapi fallback)
# - Show sportsbook affiliate ads only in states where online sports betting is supported
# - Hide ads for Premium users ("No ads")
NEXT_PUBLIC_SPORTSBOOK_AFFILIATE_ADS_ENABLED=false

# Optional: enable an external IP-to-geo fallback via ipapi.co when the hosting platform
# does not provide state-level geo headers. This makes a client-side request to ipapi.co.
# Consider privacy policy implications before enabling.
NEXT_PUBLIC_GEOIP_FALLBACK_IPAPI=false

# Optional: override the default list of US states where online/mobile sports betting is enabled.
# Comma or space separated state codes (e.g., "NY,NJ,PA").
NEXT_PUBLIC_ONLINE_SPORTS_BETTING_STATES=

# Affiliate tracking URLs (leave blank to disable that sportsbook)
NEXT_PUBLIC_BETMGM_AFFILIATE_URL=
NEXT_PUBLIC_CAESARS_AFFILIATE_URL=
NEXT_PUBLIC_BET365_AFFILIATE_URL=
NEXT_PUBLIC_FANDUEL_AFFILIATE_URL=
NEXT_PUBLIC_FANATICS_AFFILIATE_URL=
NEXT_PUBLIC_DRAFTKINGS_AFFILIATE_URL=
NEXT_PUBLIC_BETRIVERS_AFFILIATE_URL=

# Optional: sportsbook availability by US state (JSON)
# Use this to ONLY show a given book in the states where it operates.
# Example:
# NEXT_PUBLIC_SPORTSBOOK_ALLOWED_STATES_JSON={"fanduel":["NY","NJ"],"draftkings":["NY","NJ"],"bet365":["NJ","OH"]}
NEXT_PUBLIC_SPORTSBOOK_ALLOWED_STATES_JSON=

# Google Site Verification (for search console)
# Get from Google Search Console
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=

