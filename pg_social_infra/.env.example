# Standalone Social Bot Admin - shared env example

# -----------------------------------------------------------------------------
# Postgres
# -----------------------------------------------------------------------------
# Local dev (compose): mapped to localhost:5433
DATABASE_URL=postgresql+asyncpg://pgsocial:pgsocial@localhost:5433/pgsocial

# -----------------------------------------------------------------------------
# Redis (optional; used for rate limiting / future queues)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6380/0

# -----------------------------------------------------------------------------
# Bot API (FastAPI)
# -----------------------------------------------------------------------------
BOT_API_HOST=0.0.0.0
BOT_API_PORT=8100
BOT_API_LOG_LEVEL=info

# CORS for Admin UI (comma-separated)
BOT_API_CORS_ORIGINS=http://localhost:3101

# Public origin for redirect links embedded in posts
BOT_API_PUBLIC_BASE_URL=http://localhost:8100

# -----------------------------------------------------------------------------
# Auth / RBAC
# -----------------------------------------------------------------------------
JWT_SECRET=change_me_now
JWT_ISSUER=pg-social-bot
JWT_AUDIENCE=pg-social-admin-ui

# Bootstrap owner user (created on first run if missing)
ADMIN_BOOTSTRAP_EMAIL=fawl3r85@gmail.com    
ADMIN_BOOTSTRAP_PASSWORD=Nefatari1985!

# -----------------------------------------------------------------------------
# Admin UI (Next.js)
# -----------------------------------------------------------------------------
ADMIN_UI_PORT=3101
NEXT_PUBLIC_BOT_API_BASE_URL=http://localhost:8100

# -----------------------------------------------------------------------------
# Analysis feed (upstream source used by bot-api refresh)
# -----------------------------------------------------------------------------
# Production backend URL (has newer/current data)
#   GET https://api.parlaygorilla.com/api/analysis-feed
# For local development (older test data), use: http://localhost:8000/api/analysis-feed
UPSTREAM_ANALYSIS_FEED_URL=https://api.parlaygorilla.com/api/analysis-feed

# Safety caps
MAX_ANALYSIS_POSTS_PER_DAY=2

# -----------------------------------------------------------------------------
# Redirect tracking (public)
# -----------------------------------------------------------------------------
# When the bot-api cannot find a CTA URL in cache, it falls back to:
#   {REDIRECT_FALLBACK_BASE_URL}/{slug}
REDIRECT_FALLBACK_BASE_URL=https://www.parlaygorilla.com/analysis

# -----------------------------------------------------------------------------
# Worker (Python)
# -----------------------------------------------------------------------------
WORKER_DRY_RUN=true
WORKER_POLL_INTERVAL_SECONDS=60

# X / Twitter API (optional until you turn off dry-run)
X_API_KEY=
X_API_SECRET=
X_ACCESS_TOKEN=
X_ACCESS_SECRET=
# Optional overrides (rare)
X_API_BASE_URL=https://api.x.com/2
X_MEDIA_UPLOAD_URL=https://upload.x.com/1.1/media/upload.json

# -----------------------------------------------------------------------------
# Bot API Image Generation (optional; enables tweet-style previews with images)
# -----------------------------------------------------------------------------
IMAGES_ENABLED=false
IMAGES_OUTPUT_DIR=static/generated
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_IMAGE_MODEL=gpt-image-1
OPENAI_TIMEOUT_SECONDS=45

# -----------------------------------------------------------------------------
# Storage (optional; reserved for future S3 support)
# -----------------------------------------------------------------------------
STORAGE_MODE=local
PUBLIC_IMAGE_BASE_URL=http://localhost:8100/static
S3_ENDPOINT_URL=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET=


