{
  "bot": {
    "dry_run": true,
    "timezone": "America/New_York",
    "log_level": "INFO"
  },
  "site_content": {
    "analysis_feed_url": "http://localhost:8000/api/analysis-feed",
    "analysis_feed_cache_ttl_seconds": 43200,
    "slug_reuse_cooldown_hours": 48,
    "max_analysis_posts_per_day": 2,
    "redirect_base_url": "",
    "ab_variants": ["a", "b"],
    "frontend_url": "https://www.parlaygorilla.com",
    "upcoming_sport": "nfl",
    "upcoming_limit": 20
  },
  "writer": {
    "suggested_template_bias": 0.7,
    "hook_probability": 0.35,
    "analysis_injection_probability": 0.65,
    "max_generate_attempts_per_item": 25
  },
  "guardian": {
    "max_length": 280,
    "max_hashtags": 2,
    "max_emojis": 2,
    "banned_phrase_action": "reject"
  },
  "dedupe": {
    "similarity_threshold": 0.88,
    "template_cooldown_hours": 18,
    "pillar_cooldown_hours": 6,
    "recent_window_items": 50
  },
  "publisher": {
    "api_base_url": "https://api.x.com/2",
    "max_retries": 4,
    "backoff_initial_seconds": 1.0,
    "backoff_max_seconds": 30.0,
    "timeout_seconds": 10.0
  },
  "scheduler": {
    "max_posts_per_day": 5,
    "max_threads_per_week": 2,
    "weekday_schedule": [
      { "time": "09:15", "tier": "low" },
      { "time": "12:30", "tier": "mid" },
      { "time": "16:45", "tier": "mid" },
      { "time": "19:30", "tier": "high" }
    ],
    "weekend_schedule": [
      { "time": "10:00", "tier": "mid" },
      { "time": "13:00", "tier": "mid" },
      { "time": "18:00", "tier": "high" }
    ],
    "tier_fallback": {
      "low": ["low", "mid"],
      "mid": ["mid", "low", "high"],
      "high": ["high", "mid", "low"]
    }
  },
  "images": {
    "enabled": true,
    "provider": "openai",
    "output_dir": "images/generated",
    "image_size": [1080, 1080],
    "attach_to_post_probability": 0.85,
    "force_for_templates": [
      "analysis_matchup_angle",
      "analysis_risk_note",
      "quick_math",
      "pg_rule"
    ],
    "logo_path": "images/logos/parlay_gorilla_logo.png",
    "font_path": "images/templates/fonts/Inter-Bold.ttf",
    "character_spec_path": "characters/parlay_gorilla.json",
    "validation": {
      "enabled": true,
      "provider": "openai",
      "model": "gpt-4o-mini",
      "max_attempts": 2
    }
  }
}


