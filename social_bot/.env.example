# Bot runtime
BOT_DRY_RUN=true
BOT_TIMEZONE=America/New_York
BOT_LOG_LEVEL=INFO

# X publisher (required only if BOT_DRY_RUN=false)
X_BEARER_TOKEN=
X_API_BASE_URL=https://api.x.com/2
X_MEDIA_UPLOAD_URL=https://upload.x.com/1.1/media/upload.json

# OpenAI (required if images.enabled=true and provider=openai)
OPENAI_API_KEY=
# Optional model overrides
OPENAI_IMAGE_MODEL=gpt-image-1
OPENAI_VISION_MODEL=gpt-4o-mini
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_TIMEOUT_SECONDS=45
OPENAI_VISION_TIMEOUT_SECONDS=30

# Site content (analysis feed + redirect tracking)
ANALYSIS_FEED_URL=http://localhost:8000/api/analysis-feed
ANALYSIS_FEED_CACHE_TTL_SECONDS=43200
ANALYSIS_SLUG_REUSE_COOLDOWN_HOURS=48
REDIRECT_BASE_URL=http://localhost:8000
FRONTEND_URL=https://www.parlaygorilla.com
UPCOMING_SPORT=nfl
UPCOMING_LIMIT=20

# Images (optional overrides)
IMAGES_ENABLED=true
IMAGES_PROVIDER=openai
IMAGES_OUTPUT_DIR=images/generated
IMAGES_ATTACH_PROBABILITY=0.85
IMAGES_LOGO_PATH=images/logos/parlay_gorilla_logo.png
IMAGES_FONT_PATH=images/templates/fonts/Inter-Bold.ttf
IMAGES_CHARACTER_SPEC_PATH=characters/parlay_gorilla.json
IMAGES_VALIDATION_ENABLED=true
IMAGES_VALIDATION_PROVIDER=openai
IMAGES_VALIDATION_MODEL=gpt-4o-mini
IMAGES_VALIDATION_MAX_ATTEMPTS=2


