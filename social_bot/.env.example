# Runtime
BOT_DRY_RUN=true
BOT_TIMEZONE=America/Chicago
BOT_LOG_LEVEL=INFO

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_TIMEOUT_SECONDS=20

# Data
ANALYSIS_FEED_URL=https://api.parlaygorilla.com/api/analysis-feed
FRONTEND_URL=https://www.parlaygorilla.com
ANALYSIS_SLUG_REUSE_COOLDOWN_HOURS=48
ANALYSIS_UPCOMING_WINDOW_HOURS=72

# Scheduling (Central Time defaults; override as needed)
# Comma-separated HH:MM (24h) list
POSTING_WINDOWS_WEEKDAY=08:10,11:40,14:10,17:10
POSTING_WINDOWS_WEEKEND=09:05,12:35,18:15
SCHEDULE_JITTER_MINUTES=8
NO_EARLY_POST_BEFORE=06:30
WEEKDAY_MAX_POSTS_PER_DAY=4
WEEKEND_MAX_POSTS_PER_DAY=3

# Posting controls
# (MAX_POSTS_PER_DAY is supported for backwards compatibility, but the bot uses
# weekday/weekend caps above.)
MAX_POSTS_PER_DAY=
HUMOR_TARGET_RATIO=0.22
INCLUDE_LINK_PROBABILITY=0.6
PARLAY_POST_MAX_RATIO=0.10

# X posting (choose ONE auth method)
# OAuth2 user token (preferred if you have it)
X_BEARER_TOKEN=
X_API_BASE_URL=https://api.x.com/2
X_TIMEOUT_SECONDS=20

# OAuth1 user context (alternative)
X_API_KEY=
X_API_SECRET=
X_ACCESS_TOKEN=
X_ACCESS_SECRET=


